<article class="post">
	<div class="post-header bg-teal-gradient py-3">
		<div class="container">
			<h1 class="article-title">
				<%= post.title %>
			</h1>
			<a href="<%= url_for(post.path) %>" class="post-link text-white">
				<%= post.date.format('YYYY-MM-DD') %>
			</a>
		</div>
	</div>
	<div class="post-content container pt-2">
		<%- post.content %>
	</div>
</article>
